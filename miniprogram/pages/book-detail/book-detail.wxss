/* miniprogram/pages/book-detail/book-detail.wxss */
.book-detail-page {
  padding: 40rpx 32rpx;
}

.book-detail-page image {
  width: 100%;
  background-color: #ddd;
  box-shadow: 0px 0px 1px 1px #ddd;
}

.book-detail-page .info {
  margin-top: 40rpx;
}

.book-detail-page .description-wrapper {
  margin-top: 40rpx;
  margin-bottom: 80rpx;
}

.info text {
  display: block;
  margin-top: 20rpx;
  font-size: 36rpx;
}

.info .name {
  font-weight: bold;
  font-size: 40rpx;
}

.tags {
  display: flex;
  margin-top: 40rpx;
}

.tags text {
  display: block;
  margin-right: 20rpx;
  padding: 4rpx 10rpx;
  background-color: #2196f3;
  border-radius: 6rpx;

  color: #fff;
  font-size: 34rpx;
}

.description-wrapper text {
  display: block;
  margin-bottom: 20rpx;
  font-weight: bold;
}

.description-wrapper .description {
  display: block;
  padding: 0 40rpx;
  text-align: justify;
  line-height: 1.6em;
  font-size: 34rpx;
}

button {
  position: fixed;
  right: 0px;
  bottom: 0px;
  left: 0px;
  border-radius: 0px;
  box-shadow: 0px -2px 4px #ddd;
}