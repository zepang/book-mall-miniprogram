<view class="page">
  <block wx:if="{{tabIndex === 0}}">
    <text>0</text>
  </block>

  <block wx:elif="{{tabIndex === 1}}">
    <van-search
      value="{{ value }}"
      placeholder="请输入搜索关键词"
    />

    <swiper></swiper>
  </block>

  <block wx:else="{{tabIndex === 2}}">
    <text>2</text>
  </block>
</view>


<tab-bar bind:switch-tab="switchTab" selected="{{tabIndex}}"></tab-bar>

