/* miniprogram/pages/user/user.wxss */
.user-page {
  height: calc(100vh - 120rpx);
  padding-bottom: 40rpx;
  box-sizing: border-box;
  background-color: #f7f8fa;
}

.user-page__header {
  position: relative;
}

.user-page__header .bg {
  height: 260rpx;

  background-color: #09BB07;
  border-bottom: 8rpx solid #fff;
  box-shadow: 0px 1px 4px #ddd;
}

.user-page__header 

.avatar {
  position: absolute;
  z-index: 99;
  left: 50%;
  margin-top: -140rpx;
  transform: translateX(-50%);
}

.avatar image {
  height: 160rpx;
  width: 160rpx;

  background-color: #ddd;
  border-radius: 50%;
  border: 8rpx solid #fff;
  box-shadow: 0px 1px 4px #ddd;
}

.user-page__body {
  margin-top: 40rpx;
  position: relative;
  box-shadow: 0px 1px 4px #ddd;
  background-color: #fff;
}

.user-page__body .item text {
  color: #616263;
}

.user-page__body .mask {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 10;
  background-color: rgba(255, 255, 255, .9);
}

.user-page__body .mask button {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

