/* components/recipe/index.wxss */
.user {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  height: 122rpx;
  background-color: rgba(255, 255, 255, 0.9);
  z-index: 1;
}

.user,
.meta,
.content .title,
.content .desc {
  padding: 0 40rpx;
}

.user image {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
}

.user view text {
  display: block;
}

.user view text:first-child {
  font-size: 24rpx;
}

.user view text:last-child {
  font-size: 24rpx;
  color: #767676;
}

.content .title {
  height: 64rpx;
  margin-top: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 36rpx;
}

.content .title image {
  width: 48rpx;
  height: 48rpx;
}

.content image.cover {
  width: 100%;
  height: 400rpx;
}

.content .desc {
  margin-top: 24rpx;
  font-size: 24rpx;
  line-height: 44rpx;
  color: #A8A8A8;
}

.meta {
  height: 56rpx;
  margin-top: 34rpx;
  display: flex;
  align-items: center;
}

.meta text {
  font-size: 28rpx;
  color: #606060;
}

.meta text:first-child {
  display: inline-block;
  position: relative;
  padding-right: 72rpx;
}

.meta text:first-child:after {
  content: '';
  display: inline-block;
  position: absolute;
  right: 36rpx;
  top: 50%;
  transform: translateY(-50%);
  height: 6rpx;
  width: 6rpx;
  background-color: #606060;
  border-radius: 50%;
}

.meta button.store {
  width: 144rpx;
  height: 52rpx;
  border: 2rpx solid #30BE76;
  border-radius: 6rpx;
  margin-left: auto;
  margin-right: 0;
  color: #30BE76;
  font-size: 28rpx;
  line-height: 46rpx;
  background-color: transparent;
}