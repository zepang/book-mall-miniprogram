<!--components/recipe/index.wxml-->
  <view class="user">
    <image src="{{data.user.avatar}}"></image>
    <view>
      <text>{{data.user.name}}</text>
      <text>{{data.meta.publishedAt}}</text>
    </view>
  </view>
  <view class="content">
    <image class="cover" src="{{data.content.cover}}"></image>
    <view class="title">
      <text>{{data.content.title}}</text>
      <image src="{{data.meta.like.icon}}"></image>
    </view>
    <view class="desc">
      <text>{{data.content.desc}}</text>
    </view>
  </view>
  <view class="meta">
    <text>{{data.meta.like.count}} liks</text>
    <text>{{data.meta.comments}} comments</text>
    <button class="store">Save</button>
  </view>
