<!--components/book-list/book-list.wxml-->
<view class="book-list">
  <view class="book" wx:for="{{list}}" wx:key="index" bindtap="navToDetail" data-name="{{item.name}}">
    <image class="cover" src="{{item.cover}}"></image>
    <view class="info">
      <view class="top">
        <text class="name">{{item.name}}</text>
        <text class="author"> By {{item.author}}</text>
      </view>
      <view class="bottom">
        <text class="date">{{item.updatedAt}}</text>
        <text class="other">view: {{item.view}}</text>
      </view>
    </view>
  </view>
</view>